<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<context:component-scan
		base-package="org.sol.book.chap07" />

	<context:property-placeholder
		location="classpath:db.properties" />

	<!-- dataSource를 초기화한다. -->
	<bean id="dataSource" class="org.mariadb.jdbc.MariaDbDataSource">
		<property name="url" value="${db.url}" />
	</bean>
	
	<!-- p.190 [리스트 8.6]. dataSource를 jdbcTemplate에 injection -->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<!-- p.190 [리스트 8.6]. jdbcTemplate을 memberDao에 injection -->
	<bean id="memberDao"
		class="org.jacob.book.chap08.MemberDaoImplUsingSpringJdbc">
		<property name="jdbcTemplate" ref="jdbcTemplate" />
	</bean>

	<!-- memberDao를 memberService에 injection -->
	<bean id="memberService" class="org.jacob.book.chap08.MemberService">
		<property name="memberDao" ref="memberDao" />
	</bean>
</beans>